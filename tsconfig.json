{
  "compilerOptions": {
    "checkJs": false,
    "customConditions": ["development"],
    "declarationMap": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "exactOptionalPropertyTypes": true,
    "jsx": "preserve",
    "lib": ["dom", "es2022"],
    "module": "node16",
    "strict": true,
    "target": "es2022"
  },
  "exclude": ["coverage/", "node_modules/"],
  "include": ["**/*.js", "**/*.jsx"]
}
